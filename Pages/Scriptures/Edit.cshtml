@page "{Id:int}"
@model Journal.Pages.Scriptures.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Scripture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Scripture.Id" />
            <div class="form-group">
                <!--
                <label asp-for="Scripture.BookId" class="control-label"></label>
                <select asp-for="Scripture.BookId" class="form-control" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="Scripture.BookId" class="text-danger"></span>
                -->
                <select asp-for="Scripture.BookId" class="form-control">
                    <option value="Scripture.BookId">Scripture.Title</option> <!-- Default option -->
                    @foreach (var book in Model.Books)
                    {
                        <option value="@book.Id">@book.Title</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Chapter" class="control-label"></label>
                <input asp-for="Scripture.Chapter" class="form-control" />
                <span asp-validation-for="Scripture.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Verse" class="control-label"></label>
                <input asp-for="Scripture.Verse" class="form-control" />
                <span asp-validation-for="Scripture.Verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Text" class="control-label"></label>
                <input asp-for="Scripture.Text" class="form-control" />
                <span asp-validation-for="Scripture.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.CreatedAt" class="control-label"></label>
                <input asp-for="Scripture.CreatedAt" class="form-control" />
                <span asp-validation-for="Scripture.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
